{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ES2020",
    "moduleResolution": "Bundler",

    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist-types",
    "stripInternal": true,

    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "types"],
  "exclude": ["dist", "dist-types", "node_modules"]
}
