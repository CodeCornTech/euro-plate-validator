{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "checkJs": false,
    //"types": ["@types/inputmask"],  "./node_modules",
    "typeRoots": ["./types", "./node_modules/@types"]
  },

  "include": ["src", "types"],
  "exclude": ["node_modules", "_php_variant/**", "bin/**", "dist/**", "**/*.test.ts", "_HTML/**"]
}
