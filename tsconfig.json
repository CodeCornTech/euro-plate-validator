{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "rootDir": "src",
    "outDir": "./dist",
    "skipLibCheck": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "types": [
      "jquery",
      "toastr",
      "inputmask",
      "node",
      "sizzle",
      "json-schema",
      "estree",
    ],

    "typeRoots": ["./types", "./node_modules/@types", "./node_modules/undici-types"],
    "importHelpers": true,
    "removeComments": false
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "_php_variant/**", "bin/**", "dist/**", "**/*.test.ts", "_HTML/**"]
}
